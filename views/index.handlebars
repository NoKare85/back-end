<h1 class="text-center mb-3">
    {{title}}
</h1>
<form action="/api/tasks" method="POST" class="mb-4">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control">
    </div>
    <input type="submit" value="Add Task" class="btn btn-primary btn-block mt-4">
</form>
<h4>Tasks</h4>
<div class="clearfix">
    <ul class="list-group">
        {{#each tasks}}
        <li class="list-group-item">{{this.title}}: {{this.description}}
            <button id={{this._id}} class="btn btn-danger btn-sm float-end"
                onclick=deleteTask(event.target.id)>X</button>
        </li>
        {{/each}}
    </ul>
</div>